<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title text-center">Nueva Categoria</h2>
            </div>
            <div class="modal-body">
                <form id="form_validation" method="POST" action="/admin/categories">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="title" required>
                                    <label class="form-label">Titulo</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="file" class="form-control" name="image" >
                                    <label class="form-label">Imagen</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <textarea name="description" id="bio" cols="30" rows="3"
                                              class="form-control no-resize"></textarea>
                                    <label class="form-label">Descripcion</label>
                                </div>
                            </div>
                        </div>
                        <div class=" col-sm-12">
                            <div class="form-group ">
                                <label>Status</label>
                                <select class="selectpicker" name="status">
                                    <option value="true">Active</option>
                                    <option value="false" active>Inactive</option>
                                </select>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <div class="row">
                            <div class="col-sm-12 text-center">
                                <button type="submit" class="btn btn-info" onclick="validateEmpty()">Guardar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
