<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2 style="font-size: 30px">
                Editar <%= categories.title %>
            </h2>
        </div>

        <!--<div class="container">-->
        <form action="/admin/categories/<%= categories._id %>" id="form_validation" method="post">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <label>Titulo</label>
                            <input style="background-color: transparent" type="text" class="form-control"
                                   name="title" value="<%= categories.title %>" required>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <label>Descripcion</label>
                            <input style="background-color: transparent" type="text" class="form-control" name="description" value="<%= categories.description %>" required>

                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div style="background-color: transparent" class="form-group">
                        <label>Estado</label><br>
                        <select style="background-color: transparent" class="selectpicker" name="status" required>
                            <% if(categories.status == true){ %>
                            <option value="true" selected>Active</option>
                            <option value="false">Inactive</option>
                            <% }else{ %>
                            <option value="true">Active</option>
                            <option value="false" selected>Inactive</option>
                            <% } %>
                        </select>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-5 text-center">
                    <a class="btn btn-info" href="/admin/categories">Atras</a>
                </div>
                <div class="col-sm-6 text-center">
                    <input type="hidden" value="PUT" name="_method">
                    <button type="submit" class="btn btn-info ">Actualizar</button>
                </div>
            </div>
            <!--<input type="submit" value="Update"/>-->
        </form>
        <!--</div>-->
    </div>
</section>

<% include ../../base_admin %>

